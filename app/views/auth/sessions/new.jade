extends ../../layouts/home.jade

block content
  .container.signin__box
    h1 Welcome back.  Log in to get slashin' again.

    .row
      .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
        .well
          form.form(action="/auth/sign_in", method="post")
            input(type="hidden", name="_csrf", value="#{csrfTokenFunction()}")
            .form-group
              label.control-label Email
              input.form-control(type="email", name="email")
            .form-group
              label.control-label Password
              input.form-control(type="password", name="password")
            .form-gorup
              button.btn.btn-primary(type="submit") Continue yer adventure

    .row
      .col-sm-4.col-sm-offset-4
        .thumbnail
          img(src="/images/orc.png")
          .caption
            p We've missethed you.


